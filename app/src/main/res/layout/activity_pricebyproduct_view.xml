<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/priceFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/price_frame_padding"
            android:paddingLeft="@dimen/price_frame_padding"
            android:paddingRight="@dimen/price_frame_padding"
            android:paddingBottom="@dimen/card_view_padding_vertical">
            <ImageView
                android:id="@+id/ivProductLogo"
                android:contentDescription="@string/product_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/price_logo_height"
                android:layout_gravity="center"
                android:layout_margin="@dimen/price_imageview_margin"
                tools:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/price_frame_text_paddingLeft"
                android:paddingBottom="@dimen/price_frame_text_padding_vertical"
                android:paddingTop="@dimen/price_frame_text_padding_vertical"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:background="@color/price_text_header"
                >
                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/price_view_title_size"
                    tools:text="@string/product_name"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvProductDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/product_description"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>
        </FrameLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPrices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/priceFrameLayout"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/padding_bottom_recyclerview"/>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabPriceByProductViewAdd"
        android:src="@drawable/ic_add"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="bottom|end"
        app:rippleColor="@android:color/holo_blue_light"
        app:layout_behavior="br.com.thiago.trabalhoconclusao.ScrollAwareFABBehavior"
        />
</android.support.design.widget.CoordinatorLayout>